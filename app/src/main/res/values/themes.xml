<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pumpkin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <!--colorPrimaryVariant is the color of recycler view bgShape-->
        <item name="colorPrimaryVariant">#f1f4f6</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">#1e88e5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Card color -->
        <item name="colorSurface">#0277bd</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:scrollbarThumbVertical">?attr/colorSecondary</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>

    </style>

    <style name="Theme.Pumpkin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
    </style>


    <style name="MyTextInputLayoutExpense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>

        <item name="android:textColorHint">@color/textfiled_hinttext_colorstate</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="boxBackgroundColor">#00FFFFFF</item>
        <item name="prefixTextColor">@color/black</item>
        <!-- Theme attributes<item name="boxStrokeColor">?attr/colorOnPrimary</item> -->
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="boxStrokeColor">@color/text_field_boxstroke_colorstate</item>

    </style>


    <style name="MyTextInputLayoutTag" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <!-- Style attributes -->
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>

        <item name="endIconTint">?attr/colorSecondary</item>

        <!-- Style attributes <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="counterTextAppearance">@style/HintText</item>-->


        <!-- Theme attributes -->
        <item name="android:textColorHint">@color/textfiled_hinttext_colorstate</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="boxBackgroundColor">#00FFFFFF</item>
        <!-- Theme attributes<item name="boxStrokeColor">?attr/colorOnPrimary</item> -->
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="boxStrokeColor">@color/text_field_boxstroke_colorstate</item>

    </style>

    <style name="CustomCardCornersTop" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners_top</item>
    </style>

    <style name="ShapeAppearance_custom_corners_top" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomCardCornersBottom" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners_bottom</item>
    </style>

    <style name="ShapeAppearance_custom_corners_bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
    </style>

    <style name="updateButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="textAppearanceButton">@style/updateButtonText</item>
        <item name="background">@drawable/top_card_bg</item>

    </style>

    <style name="updateButtonText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
    </style>


    <!--new changes-->

    <style name="topSectionBg" parent="">
        <item name="android:background">@drawable/top_bg_shape_gradient</item>
    </style>

    <style name="topCardStyle" parent="Widget.MaterialComponents.CardView">
        <!--card color is irrelevant if we use cardimageview background-->
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="topCardImageViewStyle" parent="">
        <item name="android:background">@drawable/top_card_bg</item>
    </style>

    <style name="dateSelect" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="icon">@drawable/date_icon</item>
        <item name="strokeColor">#00000000</item>
        <item name="iconTint">?attr/colorSecondary</item>
    </style>

    <style name="reportButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="icon">@drawable/report_icon</item>
        <item name="strokeColor">#00000000</item>
        <item name="iconTint">?attr/colorSecondary</item>
    </style>

    <style name="fabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">#eeeeee</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="textInMiddle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="expensePerDay" parent="Widget.AppCompat.TextView">
        <item name="alpha">.8</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="recyclerBg" parent="">
        <item name="android:backgroundTint">#00FFFFFF</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="entryItemStyle" parent="Widget.MaterialComponents.CardView">
        <!--<item name="cardBackgroundColor">#299cf1</item>-->
        <item name="cardCornerRadius">16dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="entryItemBackgroundStyle" parent="">
        <item name="android:background">@drawable/top_card_bg</item>
    </style>


    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">#0277bd</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">#b3e5fc</item>
        <!-- Customize text field of the text input mode. -->
    </style>

</resources>