<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/entryCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorSurface"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:rippleColor="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="36dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/textViewExpenseName"
            android:maxWidth="170sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textViewExpenseName"
            android:text="Expense Name"
            android:textColor="?attr/colorOnPrimary"
            android:textStyle="normal"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewExpenseName"
            android:layout_centerVertical="false"
            android:layout_marginTop="5dp"
            android:text="Date"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textViewTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="Tag"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="14sp"
            android:layout_marginRight="110sp"/>


        <TextView
            android:id="@+id/textViewAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Amount"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="20sp"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>